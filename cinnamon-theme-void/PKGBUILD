# Maintainer: sh4nks <https://github.com/sh4nks/pkgbuilds>
# Author: debimint <luisrafaelgalvez.com>
pkgname=cinnamon-theme-void
pkgver=2.1
pkgrel=1
pkgdesc="Void Cinnamon theme"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/104"
license=('unknown')
depends=('cinnamon' 'ttf-roboto')
source=("http://cinnamon-spices.linuxmint.com/uploads/themes/CF2X-9H73-SHDJ.zip")
md5sums=('3360a74b46e044ae9013d997cbc8fae2')

package() {
    mv $srcdir/Void_Pack/Void* $srcdir/
    rm -r $srcdir/Void_Pack
    for i in Void*; do
        find "$i" -type f -not -name *~ -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
    done
}